{
  "manifest_version": 3,
  "name": "Back Button Locker (Incognito)",
  "version": "1.0",
  "description": "Prevents using the back button by trapping the history stack.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "incognito": "spanning",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}